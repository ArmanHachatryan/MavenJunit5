<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="connection.url">jdbc:postgresql://172.17.1.16/InfoDB</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.username">atink</property>
        <property name="connection.password">tinkpass</property>

        <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <property name="show_sql">true</property>
        <property name="format_sql">true</property> <!-- Show SQL formatted -->

        <mapping class="org.aston.exercise.infoService.Entity.BugReport"/>
    </session-factory>
</hibernate-configuration>